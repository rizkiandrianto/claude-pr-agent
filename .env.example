# Bitbucket OAuth (Client Credentials)
BB_CLIENT_ID=your_key
BB_CLIENT_SECRET=your_secret

# Webhook verification (optional HMAC secret from BB webhook)
WEBHOOK_SECRET=your_webhook_secret

# Claude Code runtime options
# Where Claude Code stores creds (we mount this as a volume in Docker)
XDG_CONFIG_HOME=/data/.config
XDG_CACHE_HOME=/data/.cache
XDG_DATA_HOME=/data/.local/share

# Feature toggles
ENABLE_DESCRIBE=1
ENABLE_REVIEW=1
ENABLE_INLINE=1

# Limits
MAX_INLINE_COMMENTS=10
MAX_DESC_APPEND_CHARS=2500

